<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullAppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.NoAppBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorLoginBtnBckgrnd</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorBlack</item>
    </style>

    <style name="NormalDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="SolidButtonStyle" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:width">@dimen/button_width</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/rounded_blue_button_solid</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="InputBoxStyle" parent="android:Widget.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:width">@dimen/button_width</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/inputBox_padding</item>
        <item name="android:paddingRight">@dimen/inputBox_padding</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/rectangle_input</item>
        <item name="android:textColor">@color/grey60</item>
        <item name="android:textColorHint">@color/greycb</item>
    </style>

    <style name="ErrorTextStyle" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">@dimen/inputBox_padding</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/red_error</item>
    </style>
</resources>
